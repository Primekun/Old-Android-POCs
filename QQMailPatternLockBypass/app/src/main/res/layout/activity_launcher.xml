<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".LauncherActivity">

  <Button
    android:id="@+id/doEnterComposeMailActivity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:text="进入写邮件界面"/>


  <Button
    android:id="@+id/doEnterComposeNoteActivity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/doEnterComposeMailActivity"
    android:layout_centerHorizontal="true"
    android:text="进入记事本界面"/>

  <Button
    android:id="@+id/doEnterLauncherActivity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/doEnterComposeNoteActivity"
    android:layout_centerHorizontal="true"
    android:text="进入邮箱主界面"/>

  <Button
    android:id="@+id/doEnterFtnUploadActivity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/doEnterLauncherActivity"
    android:layout_centerHorizontal="true"
    android:text="进入文件中转站"/>

  <Button
    android:id="@+id/doEnterCalendarActivity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/doEnterFtnUploadActivity"
    android:layout_centerHorizontal="true"
    android:text="进入日历"/>


</RelativeLayout>
